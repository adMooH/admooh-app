{
  "compilerOptions": {
    "module":"commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": true,
    "noErrorTruncation": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "paths": {
      "@admooh-app/core": ["./packages/admooh-app/src"],
      "@admooh-app/core/*": ["./packages/admooh-app/src/*"],
      "@admooh-app/tools": ["./packages/admooh-app-tools/src"],
      "@admooh-app/tools/*": ["./packages/admooh-app-tools/src/*"],
      "test/*": ["./test/*"]
    }
  },
  "exclude": ["**/build/"]
}
